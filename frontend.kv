<ContentNavigationDrawer>:

    ScrollView:

        MDList:

            OneLineListItem:
                text: "Home"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "HomeScreen"
                    app.clear_title_list()

            OneLineListItem:
                text: "Add Issue"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "AddIssueScreen"

            OneLineListItem:
                text: "Update Issue"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "UpdateIssueScreen"

            OneLineListItem:
                text: "Delete Issue"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "DeleteIssueScreen"

            #OneLineListItem:
            #    text: "List"
            #    on_press:
            #        root.nav_drawer.set_state("close")
            #        root.screen_manager.current = "ListScreen"


Screen:
    BoxLayout:
        orientation: 'vertical'
        # MDToolbar:
        MDTopAppBar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 10
            title: "Comic Books!!"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationLayout:
            x: toolbar.height

            ScreenManager:
                id: screen_manager

                Screen:
                    name: "HomeScreen"
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: 5
                        spacing: 5
                        ScrollView:
                            size_hint: (0.95, 0.20)
                            pos_hint: {'center_x': .55, 'y': .20}
                            #adaptive_width: 'true'

                            MDList:
                                id: container

                        MDTextField:
                            hint_text: 'Collection'
                            adaptive_height: 'true'

                        MDFillRoundFlatButton:
                            text: 'Go'
                            adaptive_width: 'true'
                            on_release:
                                screen_manager.current = "ListScreen"




                Screen:
                    id: AddIssueScreen
                    name: "AddIssueScreen"
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 5

                        MDLabel:
                            text: "Add Issue Screen"
                            halign: "center"
                        MDTextField:
                            id: AddIssueTitle
                            name: 'AddIssueTitle'
                            hint_text: 'Enter Comic Title'
                            helper_text: 'Enter Comic Title'
                            helper_text_mode: "persistent"
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddComicPublisher
                            hint_text: 'Enter Comic Publisher'
                            helper_text: 'Enter Comic Publisher'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddVolumeNumber
                            hint_text: 'Enter Volume Number'
                            helper_text: 'Enter Volume Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddIssueNumber
                            hint_text: 'Enter Issue Number'
                            helper_text: 'Enter Issue Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddIssueSubtitle
                            hint_text: 'Enter Issue Subtitle'
                            helper_text: 'Enter Issue Subtitle'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddPrintNumber
                            hint_text: 'Enter Print Number'
                            helper_text: 'Enter Print Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddIssuePrice
                            hint_text: 'Enter Issue Price'
                            helper_text: 'Enter Issue Price'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: AddPurchaseDate
                            hint_text: 'Enter Purchase Date'
                            helper_text: 'Enter Purchase Date'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDFillRoundFlatButton:
                            text: "Add"
                            halign: 'center'
                            on_press:
                                app.add_title()
                                

                Screen:
                    id: UpdateIssueScreen
                    name: "UpdateIssueScreen"
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 5
                        MDLabel:
                            text: "Update Issue Screen"
                            halign: "center"
                        MDTextField:
                            id: UpdateIssueTitle
                            hint_text: 'Enter Comic Title'
                            helper_text: 'Enter Comic Title'
                            helper_text_mode: "persistent"
                            size_hint: (0.95, 0.40)
