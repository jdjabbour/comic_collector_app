                        MDLabel:
                            id: PrintNumber
                            hint_text: 'Enter Print Number'
                            helper_text: 'Enter Print Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDLabel:
                            id: DeleteIssuePrice
                            hint_text: 'Enter Issue Price'
                            helper_text: 'Enter Issue Price'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDLabel:
                            id: PurchaseDate
                            hint_text: 'Enter Purchase Date'
                            helper_text: 'Enter Purchase Date'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDFillRoundFlatButton:
                            text: "Back"
                            #pos_hint: {'center_x': 0.5, 'y': 100}
                            on_press:
                                app.go_back()
                Screen:
                    id: AddConfirmation
                    name: 'AddConfirmation'
                    FloatLayout:
                        orientation: 'vertical'
                        elevation: 10
                        MDCard:
                            size_hint: None, None
                            size: "280dp", "180dp"
                            pos_hint: {"center_x": .5, "center_y": .5}
                            padding: 10
                            BoxLayout:
                                orientation: 'vertical'
                                MDLabel:
                                    id: CardAdd
                                    text: 'Added'
                                    halign: 'center'
                                MDSeparator:
                                    height: "1dp"
                                MDLabel:
                                    id: CardAddTitle
                                    text: ''
                                    halign: 'center'
                                MDFillRoundFlatButton:
                                    text: 'Close'
                                    on_press:
                                        app.go_back_to_action()
