                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDLabel:
                            id: IssueNumber
                            hint_text: 'Enter Issue Number'
                            helper_text: 'Enter Issue Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDLabel:
