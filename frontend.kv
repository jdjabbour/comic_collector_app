                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: DeleteVolumeNumber
                            hint_text: 'Enter Volume Number'
                            helper_text: 'Enter Volume Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: DeleteIssueNumber
                            hint_text: 'Enter Issue Number'
                            helper_text: 'Enter Issue Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: DeleteIssueSubtitle
                            hint_text: 'Enter Issue Subtitle'
                            helper_text: 'Enter Issue Subtitle'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: DeletePrintNumber
                            hint_text: 'Enter Print Number'
