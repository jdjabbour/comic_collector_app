                                app.delete_title()

                Screen:
                    id: ListScreen
                    name: 'ListScreen'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: 5
                        spacing: 5
                        ScrollView:
                            size_hint: (0.95, 0.20)
                            pos_hint: {'center_x': .55, 'y': .20}

                            MDList:
                                id: ListContainer
                Screen:
                    id: IssueScreen
                    name: 'IssueScreen'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 10
                        MDLabel:
                            text: "Issue Screen"
                            #halign: "center"
                            size_hint: (0.95, 0.10)
                            pos_hint: {'center_x': 0.5, 'y': 300}
                        MDLabel:
                            id: IssueTitle
                            hint_text: ''
                            size_hint: (0.95, 0.10)
                            pos_hint: {'center_x': 0.5, 'y': 200}
                        MDLabel:
                            id: ComicPublisher
                            hint_text: 'Enter Comic Publisher'
                            helper_text: 'Enter Comic Publisher'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDLabel:
                            id: VolumeNumber
