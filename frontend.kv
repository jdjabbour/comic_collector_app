                            id: UpdateComicPublisher
                            hint_text: 'Enter Comic Publisher'
                            helper_text: 'Enter Comic Publisher'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: UpdateVolumeNumber
                            hint_text: 'Enter Volume Number'
                            helper_text: 'Enter Volume Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: UpdateIssueNumber
                            hint_text: 'Enter Issue Number'
                            helper_text: 'Enter Issue Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: UpdateIssueSubtitle
                            hint_text: 'Enter Issue Subtitle'
                            helper_text: 'Enter Issue Subtitle'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: UpdatePrintNumber
                            hint_text: 'Enter Print Number'
                            helper_text: 'Enter Print Number'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: UpdateIssuePrice
                            hint_text: 'Enter Issue Price'
                            helper_text: 'Enter Issue Price'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDTextField:
                            id: UpdatePurchaseDate
                            hint_text: 'Enter Purchase Date'
                            helper_text: 'Enter Purchase Date'
                            helper_text_mode: 'on_focus'
                            size_hint: (0.95, 0.40)
                        MDFillRoundFlatButton:
                            text: "Update"
                            halign: 'center'
                            on_press:
                                app.update_title()

                Screen:
                    id: DeleteIssueScreen
                    name: "DeleteIssueScreen"
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 5
                        padding: 5
                        MDLabel:
                            text: "Delete Issue Screen"
                            halign: "center"
                        MDTextField:
                            id: DeleteIssueTitle
                            hint_text: 'Enter Comic Title'
                            helper_text: 'Enter Comic Title'
                            helper_text_mode: "persistent"
                            size_hint: (0.95, 0.40)
